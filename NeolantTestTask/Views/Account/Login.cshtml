
@{
    ViewData["Title"] = Localizer["Login"];
}
<h2>@Localizer["Login"]</h2>
<form asp-action="Login" method="post">
    <div class="form-group">
        <label>@Localizer["Username"]</label>
        <input type="text" name="username" class="form-control" required/>
    </div>
    <div class="form-group">
        <label>@Localizer["Password"]</label>
        <input type="password" name="password" class="form-control" required/>
    </div>
    <button type="submit" class="btn btn-primary mt-2">@Localizer["Login"]</button>
</form>
<a asp-controller="Account" asp-action="Register" class="btn btn-secondary mt-2">@Localizer["Register"]</a>
@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}