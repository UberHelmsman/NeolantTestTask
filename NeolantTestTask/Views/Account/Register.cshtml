
@{
    ViewData["Title"] = Localizer["Register"];
}
<h2>@Localizer["Register"]</h2>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label>@Localizer["Username"]</label>
        <input type="text" name="username" class="form-control" required/>
    </div>
    <div class="form-group">
        <label>@Localizer["Password"]</label>
        <input type="password" name="password" class="form-control" required/>
    </div>
    <div class="form-group">
        <label>@Localizer["Role"]</label>
        <select name="role" class="form-control">
            <option value="User">@Localizer["UserRole"]</option>
            <option value="Admin">@Localizer["AdminRole"]</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">@Localizer["Register"]</button>
</form>
@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}