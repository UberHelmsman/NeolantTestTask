
@model User

@{
    ViewData["Title"] = Localizer["Edit"];
}

<h2>@Localizer["Edit"]</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label asp-for="Username" class="form-label">@Localizer["Username"]</label>
        <input asp-for="Username" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label">@Localizer["Role"]</label>
        <select asp-for="Role" class="form-control">
            <option value="User">@Localizer["User"]</option>
            <option value="Admin">@Localizer["Admin"]</option>
        </select>
    </div>

    <div class="mb-3">
        <label>@Localizer["NewPassword"]</label>
        <input type="password" asp-for="PasswordHash" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
    <a asp-action="AdminPanel" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>